# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# HTML files
[*.html]
indent_style = space
indent_size = 4

# JavaScript files
[*.js]
indent_style = space
indent_size = 4

# TypeScript files
[*.ts]
indent_style = space
indent_size = 4

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4

# CSS files
[*.css]
indent_style = space
indent_size = 4
